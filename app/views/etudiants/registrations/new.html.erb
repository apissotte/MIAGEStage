<h2>Inscription étudiante</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "etudiants/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :email, 'Email universitaire', class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
    <%= f.hidden_field :email_universitaire, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, 'Mot de passe', class: 'form-label'%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> charactères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, 'Confirmation du mot de passe', class: 'form-label'%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>



  <div class="mb-3">
    <%= f.label :nom %><br>
    <%= f.text_field :nom, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :prenom, 'Prénom', class: 'form-label' %><br>
    <%= f.text_field :prenom, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :email_personnelle, class: 'form-label' %><br>
    <%= f.text_field :email_personnelle, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :statut_arrivant_L3, 'Statut arrivant L3', class: 'form-label' %><br>
    <%= f.text_field :statut_arrivant_L3, class: 'form-control' %>
  </div>



  <div class="actions d-flex justify-content-start">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "etudiants/shared/links" %>
